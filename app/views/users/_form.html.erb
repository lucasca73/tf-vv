<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :name, id: :user_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, id: :user_email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :senha %>
        <%= form.password_field :password, id: :user_password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :confirme_a_senha %>
        <%= form.password_field :password_confirmation, id: :user_password, class: 'form-control' %>
      </div>

      <%= form.submit 'Cadastrar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
