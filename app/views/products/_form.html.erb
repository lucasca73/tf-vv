<%= form_with(model: product, local: true) do |form| %>
 
 <div class="row">
 	<div class="col-lg-6 offset-lg-3">
 		<div class="form-group">
		    <%= form.label 'Nome', id: :product_name %>
		    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
		</div>

		<div class="form-group">
		    <%= form.label 'Descrição', id: :product_description %>
		    <%= form.text_field :description, id: :product_description, class: 'form-control' %>
		</div>
		<%= form.submit 'novo', class: 'btn btn-primary' %>
 	</div>
 </div>
<% end %>
