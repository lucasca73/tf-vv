<p id="notice"><%= notice %></p>

<%= link_to 'Novo Produto', new_product_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrição</th>
      <!-- <th>Password</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Detalhes', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
